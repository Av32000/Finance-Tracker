{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src"
  },
  "include": ["src"]
}
