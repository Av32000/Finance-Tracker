{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "outDir": "../../dist/api",
    "rootDir": "src",
    "baseUrl": "./",
    "types": ["node", "speakeasy", "mime-types", "@finance-tracker/types"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
